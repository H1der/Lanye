/* pages/index/index.wxss */
.container {
  width: 100vw;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.container .title{
  font-size: 45rpx;
}
.container .author{
  margin: 3.5vh 0;
}

.container .article {
    text-indent: 2em;
    font-size: 36rpx;
    color: #454545;
    line-height: 1.8;
    padding: 0 5vw;
}
.container .menu{
  display: flex;
  flex-direction: row;
  width: 90%;
  margin: 3.5vh 0;
  border-top: 1px solid #EAEAEA;
}
.container .menu text{
  padding-top: 2vh;
  font-size: 24rpx;
  color: #808080;
  width: 50%;
  text-align: center;
}